<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2DFDB">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/needs"
            android:src="@drawable/dt99_update"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regnama"
        android:hint="UserName           "
        android:fontFamily="serif"
        android:textSize="23dp"
            android:layout_marginLeft="8dp"
            app:met_textColorHint="@color/clrtualagi"
            app:met_textColor="#000"
            android:background="@android:color/transparent"
            app:met_floatingLabel="highlight"
        android:layout_marginBottom="8dp"
        android:textColorHint="#000"
        android:layout_marginTop="190dp"
        android:inputType="textPersonName"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regemail2"
        android:hint="Email                       "
        android:layout_marginBottom="8dp"
        app:met_floatingLabel="highlight"
        app:met_textColor="#000"
        android:layout_marginLeft="8dp"
        app:met_textColorHint="@color/clrtualagi"
        android:background="@android:color/transparent"
        android:textSize="23dp"
        android:fontFamily="serif"
        android:layout_marginTop="15dp"
        android:textColorHint="#000"
        android:inputType="textPersonName"
        android:layout_below="@+id/regnama"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordUp"
        android:hint="Password       "
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="23dp"
        android:fontFamily="serif"
        app:met_floatingLabel="highlight"
        app:met_textColor="#000"
        app:met_textColorHint="@color/clrtualagi"
        android:background="@android:color/transparent"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/regemail2"
        android:inputType="textPassword"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmpassword"
        android:hint="Confirm Password  "
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:met_textColorHint="@color/clrtualagi"
        android:background="@android:color/transparent"
        android:textSize="23dp"
        android:fontFamily="serif"
        android:textColorHint="#000"
        app:met_floatingLabel="highlight"
        android:layout_marginTop="120dp"
        app:met_textColor="#000"
        android:layout_below="@+id/regemail2"
        android:inputType="textPassword"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prov"
        android:hint="Provinsi                  "
        android:textSize="23dp"
        android:fontFamily="serif"
        android:layout_marginLeft="8dp"
        app:met_textColorHint="@color/clrtualagi"
        android:background="@android:color/transparent"
        android:textColorHint="#000"
        android:layout_marginTop="15dp"
        app:met_floatingLabel="highlight"
        android:inputType="textPersonName"
        app:met_textColor="#000"
        android:layout_below="@+id/confirmpassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kota"
            android:hint="Kota                          "
            android:layout_marginBottom="8dp"
            android:textSize="23dp"
            android:fontFamily="serif"
            android:layout_marginLeft="8dp"
            app:met_floatingLabel="highlight"
            android:inputType="textPersonName"
            android:textColorHint="#000"
            app:met_textColorHint="@color/clrtualagi"
            app:met_textColor="#000"
            android:background="@android:color/transparent"
            android:layout_marginTop="300dp"
            android:layout_below="@+id/regemail2"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kec"
            android:hint="Kecamatan             "
            android:layout_marginBottom="8dp"
            android:textSize="23dp"
            android:fontFamily="serif"
            android:textColorHint="#000"
            app:met_floatingLabel="highlight"
            app:met_textColorHint="@color/clrtualagi"
            app:met_textColor="#000"
            android:background="@android:color/transparent"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/regemail2"
            android:inputType="textPersonName"
            />

        <Button
            android:layout_width="190dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:text="Sign Up"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:layout_marginTop="22dp"
            android:id="@+id/buttonSU"
            android:layout_below="@+id/kec"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't have an account ? Sign In"
            android:gravity="center"
            android:textColor="@color/hijautua"
            android:id="@+id/txtsignin"
            android:textSize="18dp"
             android:layout_marginTop="28dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@id/buttonSU"/>
    </RelativeLayout>
</ScrollView>

